	    <exec executable="/usr/bin/hdiutil" os="Mac OS X" failonerror="true">
	      <arg value="convert"/>
	      <arg value="${tmpDmgPath}"/>
	      <arg value="-format"/>
	      <arg value="UDZO"/>
	      <arg value="-o"/>
	      <arg value="${targetDmgPath}"/>
	    </exec>
	
	    <!-- Delete the temporary image -->
	    <delete file="${tmpDmgPath}" quiet="yes" failonerror="false"/>
